{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "resourceGroup": {
            "type": "String"
        },
        "bastionHostName": {
            "type": "String"
        },
        "bastionHostSku": {
            "type": "String",
            "defaultValue": "Basic"
        },
        "bastionHostScaleUnits": {
            "type": "Int",
            "defaultValue": "2"
        },
        "publicIpAddressName": {
            "type": "String"
        }
    },
    "resources": [
		{
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2020-08-01",
            "name": "[concat(parameters('bastionHostName'), '-pip')]",
            "location": "[parameters('location')]",
            "tags": {},
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2021-05-01",
            "name": "[parameters('bastionHostName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
            ],
            "tags": {},
            "sku": {
                "name": "[parameters('bastionHostSku')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', 'onprem-vnet/AzureBastionSubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "scaleUnits": "[parameters('bastionHostScaleUnits')]"
            }
        }
    ]
}